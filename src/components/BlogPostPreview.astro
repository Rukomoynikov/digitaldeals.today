---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<a href={post.discountLink} class="discount-block">
  <div class="discount-block__image-container">
    <img src={post.picture} loading="lazy" class="discount-block__image">
    <div class="discount-block__discount-amount">{post.discount}</div>
  </div>
  <div class="discount-block__title">{post.title}</div>
  <div class="discount-block__description">{post.description}</div>
</a>

<style>
.discount-block {
  max-width: 328px;
  width: 100%;
  padding: 12px;
  display: block;
  color: black;
  text-decoration: none;
  margin-bottom: 8px;
}

.discount-block__image-container {
  width: 100%;

  background: red;
  border-radius: 12px;
  position: relative;
  aspect-ratio: 16 / 9;
}

.discount-block__image {
  bottom: 0;
  top: 0;
  height: 100%;
  position: absolute;
  left: 0;
  width: 100%;
}

.discount-block__title {
  font-size: 24px;
  margin-top: 6px;
}

.discount-block__description {
  font-size: 16px;
  margin-top: 4px;
}

.discount-block__discount-amount {
  position: absolute;
  bottom: 16px;
  right: 16px;
  background: white;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 3px 8px;

  box-sizing: border-box;
  border-radius: 10px;
}

@media (max-width: 1024px) {
  .discount-block  {
    max-width: 50%;
  }
}

@media (max-width: 375px) {
  .discount-block  {
    max-width: 100%;
  }
}
</style>
