---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<a href={post.discountLink} class="discount-block">
  <div class="discount-block__image-container">
    <img src={post.picture} loading="lazy" class="discount-block__image">
    <div class="discount-block__discount-amount">{post.discount}</div>
  </div>
  <div class="discount-block__title">{post.title}</div>
  <div class="discount-block__description">{post.description}</div>
</a>

<style>
.discount-block {
  max-width: 328px;
  padding: 10px;
  display: block;
  color: black;
  text-decoration: none;
  margin-bottom: 40px;
}

.discount-block__image-container {
  width: 100%;
  height: 184px;
  background: red;
  border-radius: 12px;
  position: relative;
}

.discount-block__image {
  bottom: 0;
  top: 0;
  height: 100%;
  position: absolute;
  left: 0;
  width: 100%;
}

.discount-block__title {
  font-size: 24px;
  margin-top: 20px;
}

.discount-block__description {
  font-size: 16px;
  margin-top: 16px;
}

.discount-block__discount-amount {
  position: absolute;
  bottom: 16px;
  right: 16px;
  background: white;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 2px 6px;

  border: 1px dashed #000000;
  box-sizing: border-box;
  border-radius: 10px;
}
</style>
