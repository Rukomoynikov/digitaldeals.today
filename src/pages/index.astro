---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import DiscountsList from '../components/DiscountsList.astro';

let title = 'DigitalDeals';
let description = 'Here we collect discounts on digital things. Like applications, or ebooks, or courses';
let permalink = 'https://digitaldeals.today/';

let allPosts = await Astro.fetchContent('./posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.publishDate).valueOf() - new Date(a.publishDate).valueOf());

---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <link rel="stylesheet" href="/assets/fonts/ibm_plex_sans/stylesheet.css" />
    <link rel="stylesheet" href="/blog.css" />

    <style>
      .wrapper {
        max-width: 1024px;
        width: 100%;
        margin: auto;
      }

      .layout {}
      .layout__discountList {
        margin-top: 45px;
      }

    </style>
  </head>

  <body>
    <div class="wrapper">
      <Header />
      <div class="layout__discountList">
        <DiscountsList>
      </div>
    </div>
  </body>
</html>
